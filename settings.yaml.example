system:
  ip: ""
  port: 8080
  gin_mode: debug
  env: dev

log:
  app: blog_server
  dir: ""

db:
  - user: your_db_user
    password: your_db_password
    host: your_db_host
    port: 3306
    db: blog
    debug: false
    source: mysql
  - user: your_db_user
    password: your_db_password
    host: your_db_host
    port: 3307
    db: blog
    debug: false
    source: mysql

es:
  addr: your_es_host:9200
  is_https:
  username: your_es_username
  password: your_es_password

river:
  enable: true
  server_id: 1001
  flavor: mysql
  data_dir: ./var
  source:
    - schema: blog
      tables:
        - article_models
  rule:
    - schema: blog
      table: article_models
      index: article_index
      type: _doc
      field:
        tag_list: tag_list,list
  bulk_size: 128

jwt:
  expire: 3
  secret: your_jwt_secret
  issuer: your_issuer_name

redis:
  addr: your_redis_host:6379
  password: your_redis_password
  db: 2

site:
  siteInfo:
    title: your_site_title
    log: ""
    beian: ""
    mode: 1
  project:
    title: golang-blog
    icon: /xxx.png
    webPath: uploads/index.html
  seo:
    keywords: your_keywords
    description: your_description
  login:
    qqLogin: true
    usernamePwdLogin: true
    emailLogin: true
    captcha: false
  indexRight:
    list: []
  article:
    noExamine: false
  about:
    siteDate: "1"
    qq: your_qq
    wechat: your_wechat
    gitee: ""
    bilibili: ""
    github: ""

email:
  domain: smtp.yourdomain.com
  port: 587
  sendEmail: your_email@example.com
  authCode: your_email_auth_code
  sendNickname: your_nickname
  ssl: true
  tls: false

qq:
  appID: your_qq_app_id
  appKey: your_qq_app_key
  redirect: your_redirect_url

qiniu:
  enable: true
  accessKey: your_qiniu_access_key
  secretKey: your_qiniu_secret_key
  bucket: your_bucket_name
  uri: http://your-cdn-url
  region: z2
  prefix: blog
  size: 3
  expiry: 60

ai:
  enable: false
  secretKey: your_ai_key
  nickname: your_ai_nickname
  avatar: ""

upload:
  size: 3
  whiteList:
    - jpg
    - jpeg
    - png
    - gif
  uploadDir: images001